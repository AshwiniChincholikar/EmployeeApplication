@model EmployeeApplication.Models.Department

@{
    ViewBag.Title = "Delete";
}
<div id="deleteDepartment">
    <h2>Delete</h2>

    <p>Employees associated with this Department will also be deleted.</p>
    <p>Are you sure you want to delete this Department?</p>
    
       <hr />
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.DepartmentName)</dt>
            <dd>@Html.DisplayFor(model => model.DepartmentName)</dd>
            @Html.HiddenFor(model => model.Id)
        </dl>

        @using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "deleteDepartment", InsertionMode = InsertionMode.Replace }))
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" />
            </div>            
        }   
        @Ajax.ActionLink("Back To Index", "Index", "Department", new AjaxOptions { HttpMethod = "get", UpdateTargetId = "deleteDepartment", InsertionMode = InsertionMode.Replace })
    
    </div>
   
